(without K8S Stage)
pipeline {
    agent any
    environment {
        SCANNER_HOME = tool 'sonar'
    }

    stages {
        stage('clean workspace') {
            steps {
                deleteDir()
            }
        }
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AbhishekRathor2003/Book-My-Show.git'
            }
        }
        stage('sonarqube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh """
                        $SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectKey=Book-My-Show---DevOps \
                        -Dsonar.projectName='Book-My-Show - DevOps' \
                        -Dsonar.sources=.
                    """
                }
            }
        }
        stage('install dependencies'){
            steps{
                sh '''
                cd bookmyshow-app
                ls -la  
                if [ -f package.json ]; then
                    rm -rf node_modules package-lock.json  
                    npm install  
                else
                    echo "Error: package.json not found in bookmyshow-app!"
                    exit 1
                fi
                '''
            }
        }
        stage('docker build and push'){
            steps{
                script{
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh 'docker build -t bms:latest -f bookmyshow-app/Dockerfile bookmyshow-app'
                        sh 'docker tag bms:latest abhishekrathor21/bms:latest'
                        sh 'docker push abhishekrathor21/bms:latest'
                    }
                }
            }
        }
        stage('deploy to container'){
            steps{
                sh 'docker run -d --name bms-app -p 3000:3000 abhishekrathor21/bms:latest'
            }
        }
    }
    post {
        success {
            emailext (
                subject: "SUCCESS: SonarQube Quality Gate Passed",
                body: """
                Hi Team,
                
                The SonarQube quality gate passed successfully.

                If you want to download a PDF report, please use the SonarQube interface or a PDF plugin.

                Regards,
                Jenkins
                """,
                to: 'rathorabhishek211@gmail.com'
            )
        }
        failure {
            emailext (
                subject: "FAILED: SonarQube Quality Gate",
                body: """
                Hi Team,
                
                The SonarQube quality gate has failed.
                
                Regards,
                Jenkins
                """,
                to: 'rathorabhishek211@gmail.com'
            )
        }
    }
}
